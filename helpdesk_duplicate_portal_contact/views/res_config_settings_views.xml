<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" >
                        <h2>Portal User Creation</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="helpdesk_on_duplicate" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="helpdesk_on_duplicate" />
                                    <div class="text-muted">Create helpdesk ticket on new portal user if a contact with the same name alredy exsists</div> 
                                    <br/>
                                    <label for="helpdesk_team_id" />
                                    <field name="helpdesk_team_id" class="oe_inline" />  
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>